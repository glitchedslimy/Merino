{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "merino",
  "version": "0.2.1",
  "identifier": "com.merino.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "title": "Merino",
        "devtools": true,
        "width": 800,
        "height": 600,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "script-src 'self' 'unsafe-inline' data:; connect-src 'self' ws://127.0.0.1:3000 http://127.0.0.1:3000 http://127.0.0.1:11434 http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "resources": [
      "resources/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/ollama-bridge"
    ],
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": null,
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "type": "offlineInstaller"
      },
      "wix": null
    }
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFFMENGNkVBOTU4MDA5MTgKUldRWUNZQ1Y2dllNSHR5c3VybkJHekJNVVFYZjJGT3RKOVpYUlQzdzArc1RTeWdrSTQ3dC82QXcK",
      "endpoints": [
        "https://github.com/glitchedslimy/Merino/releases/latest/download/latest.json"
      ]
    }
  }
}