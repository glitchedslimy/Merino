{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "merino",
  "version": "0.1.0",
  "identifier": "com.merino.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "title": "Merino",
        "width": 800,
        "height": 600,
        "dragDropEnabled": false
      }
    ],
    "security": {
       "csp": "script-src 'self' 'unsafe-inline' data:; connect-src 'self' ws://127.0.0.1:3000 http://127.0.0.1:3000"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "resources/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/ollama-bridge"]
  }
}
